<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutItemModuleForDev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#E6E6E6"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewAvatarItemModuleForDev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_menu_register"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tvAuthorItemModuleForDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/imageViewAvatarItemModuleForDev"
            android:gravity="center|left"
            android:text="Author."
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPostDayItemModuleForDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAuthorItemModuleForDev"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/imageViewAvatarItemModuleForDev"
            android:text="Post Day."
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvTitleItemModuleForDev"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/imageViewAvatarItemModuleForDev"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/imageViewAvatarItemModuleForDev"
            android:background="@drawable/border_title_module_fordev"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/chu_title_da_ton_tai"
            android:textColor="#454683"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTangLikeItemModuleForDev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/imageViewAvatarItemModuleForDev"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_expand_less_black_24dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvSoLuongLikeItemModuleForDev"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@id/btnTangLikeItemModuleForDev"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="+10"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGiamLikeItemModuleForDev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tvSoLuongLikeItemModuleForDev"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_expand_more_black_24dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvSoLuongComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleItemModuleForDev"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#CFDCEF"
            android:gravity="center"
            android:text="@string/chu_cap_nhat_binh_luan_nay"
            android:textColor="#169790"
            android:textStyle="bold|italic" />

        <ProgressBar
            android:id="@+id/progressBarItemModuleForDev"
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/btnTangLikeItemModuleForDev"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

</LinearLayout>