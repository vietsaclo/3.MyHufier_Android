<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/app_bar_switch_view_post_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/chu_xem_nhu_website" />

    <ProgressBar
        android:id="@+id/processBarLoadingWebViewDetailPost"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_switch_view_post_detail"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/btnGoBack_viewPostDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="&lt;"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnGoNext_viewPostDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btnGoBack_viewPostDetail"
        android:text="&gt;"
        android:textSize="20sp" />
</RelativeLayout>
